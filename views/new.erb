<div id="newPage">

<div id="form">

<form method="POST" action="/phones" id="newPhone">

<div class="formElement">
<label for="name">Name: </label>
<input type="text" id="name_new" name="name" required>
</div>

<div class="formElement">
<label for="brand">Brand: </label>
<select id="brand_new" name="brand">
  <option value="Apple">Apple</option>
  <option value="Samsung">Samsung</option>
  <option value="Android">Android</option>
  <option value="Other">Other</option>
</select>
</div>

<div class="formElement">
<label for="storage">Storage: </label>
<input type="text" id="storage_new" name="storage" required>
</div>

<div class="formElement">
<label for="colour">Colour: </label>
<input type="text" id="colour_new" name="colour" required>
</div>

<div class="formElement">
<label for="buy_price">Buy Price: </label>
<input type="number" id="buy_price_new" name="buy_price" required>
</div>

<div class="formElement">
<label for="sell_price">Sell Price: </label>
<input type="number" id="sell_price_new" name="sell_price" required>
</div>

<div class="bottomElement">
<input type="submit" id="newPhone" value="Save Phone">
</div>

</form>

</div>

