<h4>Add Phone</h4>

<form method="POST" action="/phones" id="newPhone">

<div id="form">

<label for="name">Name: </label>
<input type="text" id="name" name="name" required>

<label for="storage">Storage: </label>
<input type="text" id="storage" name="storage" required>

<br>

<label for="coloue">Colour: </label>
<input type="text" id="colour" name="colour" required>

<label for="buy_price">Buy Price: </label>
<input type="number" id="buy_price" name="buy_price" required>

<label for="sell_price">Sell Price: </label>
<input type="number" id="sell_price" name="sell_price" required>

<label for="submit"></label>
<input type="submit" value="Save Phone">

</div>

</form>
