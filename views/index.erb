<h2>Phones</h2>

<div id="phones-wrapper">

  <table>

  <th id="nameTable">Name</th>

  <th id="storageTable">Storage</th>

  <th id="colourTable">Colour </th>

  <th id="buyPriceTable">Buy Price</th>

  <th id="sellPrice">Sell Price</th>
  <% @phones.each do |phone| %>

  <tr>

  <td> <%= phone.name %> </td>

  <td> <%= phone.storage %> </td>

  <td> <%= phone.colour %> </td>

  <td> <%= phone.buy_price %> </td>

  <td> <%= phone.sell_price %> </td>

  <td> <a href="/phones/<%= phone.id %>/sell">Sell Phone</a></td>

  </tr>

  <% end %>

  </table>

</div>
